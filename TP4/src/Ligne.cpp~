#include "Ligne.hpp"
#include <iostream>

void Ligne::afficher() const{

  std::cout << "Ligne " << getCouleur()._r << "_" << getCouleur()._g << "_" << getCouleur()._b << " "; " " <<  _p0 << "," << _p1 << std::endl;

}

const Point& Ligne::getP0() const {

  return _p0;

}

const Point& Ligne::getP1() const {

  return _p1;

}
